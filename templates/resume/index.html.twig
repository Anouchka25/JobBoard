{% extends 'base.html.twig' %}

{% block title %}Liste de CV{% endblock %}

{% block body %}
    <!-- Main jumbotron for a primary marketing message or call to action -->
	<section class="inner-banner" style="backend:#242c36 url(https://via.placeholder.com/1920x600)no-repeat;">
		<div class="container">
			<div class="caption">
				<h2>Trouvez votre job</h2>
				<p>Trouvez les annonces les plus populaires <span>202 New job</span></p>
			</div>
		</div>
	</section>


	<section class="profile-detail">
		<div class="container">
        {% for resume in resumes %}
			<div class="col-md-12">
				<div class="row">
					<div class="basic-information">
						<div class="col-md-3 col-sm-3">
						 <img src="{{ asset('template_bootstrap/img/user.jpg') }}" alt="" class="img-responsive">
						</div>
						<div class="col-md-9 col-sm-9">
							<div class="profile-content">
									<h2>{{ resume.user.fullName }}<span>{{ resume.slogan }}</span></h2>
									<p>{{ resume.entreprise }}</p>
									<ul class="information">
										<li><span>Nom complet:</span>{{ resume.user.fullName }}</li>
                                        <li><span>Mail:</span>{{ resume.user.email }}</li>
                                        <li><span>Mobile:</span>{{ resume.mobile }}</li>
										<li><span>Entreprise:</span>{{ resume.entreprise }}</li>
										<li><span>Née:</span>{{ resume.datenaissance|date('D/M/Y') }}</li>
									</ul>
								</div>
							</div>
						<ul class="social">
							<li><a href="{{ resume.facebook }}" class="facebook"><i class="fa fa-facebook"></i>Facebook</a></li>
							<li><a href="{{ resume.google }}" class="google"><i class="fa fa-google-plus"></i>Google Plus</a></li>
							<li><a href="{{ resume.twitter }}" class="twitter"><i class="fa fa-twitter"></i>Twitter</a></li>
							<li><a href="{{ resume.linkedin }}" class="linkedin"><i class="fa fa-linkedin"></i>Linked In</a></li>
							<li><a href="{{ resume.instagram }}" class="instagram"><i class="fa fa-instagram"></i>Instagram</a></li>
						</ul>
						<div class="panel panel-default">
							<div class="panel-heading">
								<i class="fa fa-user fa-fw"></i> A propos de Moi
							</div>
												<!-- /.panel-heading -->
							<div class="panel-body">
							<p>{{ resume.summary }}</p>	
							</div>
						</div>

					</div>
				</div>
                {% else %}
            <p> Pas de CV trouvés </p>
            
        {% endfor %}
			</div>
		</div>
	</section>
{% endblock %}
