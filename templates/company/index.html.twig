{% extends 'base.html.twig' %}

{% block title %}Liste des entreprises{% endblock %}

{% block body %}
    <!-- Main jumbotron for a primary marketing message or call to action -->
	<section class="inner-banner" style="backend:#242c36 url(https://via.placeholder.com/1920x600)no-repeat;">
		<div class="container">
			<div class="caption">
				<h2>Trouvez votre job</h2>
				<p>Trouvez les annonces les plus populaires <span>202 New job</span></p>
			</div>
		</div>
	</section>


	<section class="profile-detail">
		<div class="container">
        {% for company in companies %}
			<div class="col-md-12">
				<div class="row">
					<div class="basic-information">
						<div class="col-md-3 col-sm-3">
						 <img src="{{ asset('template_bootstrap/img/microsoft.png') }}" alt="" class="img-responsive">
						</div>
						<div class="col-md-9 col-sm-9">
							<div class="profile-content">
									<h2>{{ company.name }}<span>{{ company.slogan }}</span></h2>
									<p>Nous embauchons actuellement (102) candidats</p>
									<ul class="information">
										<li><span>Addresse:</span>{{ company.adresse }}</li>
										<li><span>Site web:</span>{{ company.website }}</li>
										<li><span>Nb d'employés:</span>{{ company.employees }}</li>
										<li><span>Mail:</span>{{ company.email }}</li>
										<li><span>Crée:</span>{{ company.datecreation|date('Y') }}</li>
									</ul>
								</div>
							</div>
						<ul class="social">
							<li><a href="{{ company.facebook }}" class="facebook"><i class="fa fa-facebook"></i>Facebook</a></li>
							<li><a href="{{ company.google }}" class="google"><i class="fa fa-google-plus"></i>Google Plus</a></li>
							<li><a href="{{ company.twitter }}" class="twitter"><i class="fa fa-twitter"></i>Twitter</a></li>
							<li><a href="{{ company.linkedin }}" class="linkedin"><i class="fa fa-linkedin"></i>Linked In</a></li>
							<li><a href="{{ company.instagram }}" class="instagram"><i class="fa fa-instagram"></i>Instagram</a></li>
						</ul>
						<div class="panel panel-default">
							<div class="panel-heading">
								<i class="fa fa-user fa-fw"></i> A propos de {{ company.name }}
							</div>
												<!-- /.panel-heading -->
							<div class="panel-body">
							<p>{{ company.summary }}</p>	
							</div>
						</div>

					</div>
				</div>
                {% else %}
            <p> Pas d'entreprises trouvées </p>
            
        {% endfor %}
			</div>
		</div>
	</section>
{% endblock %}
